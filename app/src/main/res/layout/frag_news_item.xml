<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="145dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/news_url"
                android:src="@drawable/dummyimg"
                app:riv_corner_radius_bottom_left="20dp"
                app:riv_corner_radius_top_left="20dp"
                android:scaleType="centerCrop"></com.makeramen.roundedimageview.RoundedImageView>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/news_mirror"></ImageView>
            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="match_parent"
            android:background="@drawable/news_plate"
            android:padding="10dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:singleLine="true"
                android:id="@+id/news_title"
                android:textAppearance="@style/collappsed_subtitle_text_appearence"
                android:text="Todays news"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:textSize="13dp"
                android:id="@+id/news_description"
                android:layout_marginTop="5dp"
                android:maxLines="3"
                android:textAppearance="@style/collappsed_subtitle_text_appearence"
                android:text="Todays news"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color2"
                android:textSize="13dp"
                android:id="@+id/news_date"
                android:layout_marginTop="10dp"
                android:textAppearance="@style/collappsed_subtitle_text_appearence"
                android:text="Todays news"></TextView>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
