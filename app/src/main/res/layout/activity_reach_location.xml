<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/black_overlay"
   >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp">
    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/testmap"
        android:name="com.google.android.gms.maps.SupportMapFragment">

    </fragment>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            android:src="@drawable/dslogo"
            ></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text="Digital \nSahungra"
            android:textColor="@color/blackover"
            android:textSize="13sp"
            android:gravity="top"
            android:textStyle="bold"></TextView>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/blackover"
            android:layout_marginLeft="7dp"
            ></View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="Dream \nWork \nAct"
            android:textColor="@color/color2"
            android:textSize="12sp"
            android:gravity="top"
            android:textStyle="bold"
            ></TextView>
    </LinearLayout>
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/getdir"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textAllCaps="false"
        android:background="@drawable/buttonlogin"
        android:textColor="@color/white"
        android:text="Show Directions"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
       android:textColor="@color/color2"
        android:textAppearance="@style/collappsed_subtitle_text_appearence"
        android:layout_margin="5dp"
        android:textSize="14dp"
        android:textStyle="bold"
        android:text="Adress : "/>
    <TextView
        android:id="@+id/address_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="@color/grey"
        android:textAppearance="@style/collappsed_subtitle_text_appearence"
        android:layout_margin="5dp"
        android:textSize="14dp"
        android:text="VPO Sahungra, Blocak Saroya, Tehsil Balachaur, District Saheed Bhagat Singh Nagar"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/pincode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@color/color2"
            android:textAppearance="@style/collappsed_subtitle_text_appearence"
            android:layout_margin="5dp"
            android:textSize="14dp"
            android:textStyle="bold"
            android:text="Pincode :"/>
        <TextView
            android:id="@+id/pincode_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@color/grey"
            android:textAppearance="@style/collappsed_subtitle_text_appearence"
            android:layout_margin="5dp"
            android:textSize="14dp"
            android:text="144532"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@color/color2"
            android:textAppearance="@style/collappsed_subtitle_text_appearence"
            android:layout_margin="5dp"
            android:textSize="14dp"
            android:textStyle="bold"
            android:text="Email id :"/>
        <TextView
            android:id="@+id/email_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@color/grey"
            android:textAppearance="@style/collappsed_subtitle_text_appearence"
            android:layout_margin="5dp"
            android:textSize="14dp"
            android:text="mail@sahungra.org"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@color/color2"
            android:textAppearance="@style/collappsed_subtitle_text_appearence"
            android:layout_margin="5dp"
            android:textSize="14dp"
            android:textStyle="bold"
            android:text="Email id :"/>
        <TextView
            android:id="@+id/mobile_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@color/grey"
            android:textAppearance="@style/collappsed_subtitle_text_appearence"
            android:layout_margin="5dp"
            android:textSize="14dp"
            android:text="9464410043"/>
    </LinearLayout>
 </LinearLayout>
    </ScrollView>
</LinearLayout>